<!-- include standard layout -->
<% layout('../layouts/boilerplate') %>

<!-- index page -->
<div class="container-fluid pr-0 pl-0" id="newBackground" style="opacity:0.4; position:absolute">
    <img class="img-fluid" src="images/background_v5.png">
</div>
<!-- title -->
<div class="container-fluid text-center" id="galleryIntro">
    <div class="container indexcontent">
        <h4 class="mt-5">Illustrations</h4>`
        <p class="mb-5">Below you can find some of my fine art and poster illustrations. If you are interested in a certain bird don't hesitate to let me know! Al illustrations can be bought <span><a href='https://www.etsy.com/shop/HeraldingBirds' target="_blank">here</a></span>.</p>
        <div class="container-fluid justify-content-between">
            <a class="mr-3" href="#fineart"><button type="button" class="btn btn-outline-dark">Fine art</button></a>
            <a class="ml-3" href="#posterart"><button type="button" class="btn btn-outline-dark">Posters</button></a>
        </div>
    </div>
</div>
<div class="container-fluid text-center" id="icon">
    <i class="fa fa-angles-down fa-2xl"></i>
</div>

<!-- divs with fine art and illustrations to which you skip when clicking on the button above -->
<div class="container-fluid text-center mt-5">
    <h5 class="pt-5" id="fineart">Fine Art</h5>
    <hr>
    <div class="container homecontent">
        <!-- make sure that there is a new row div created for every 3 posts -->
        <div class="row">
            <% let fine_count = 0; %>
            <% for (let Post of fineart) { %>
                <div class="col-md-4 mb-2">
                    <a class="lightbox" href="#<%=Post.slug%>">
                        <img class="img-fluid index_image" src="<%= Post.image %>" alt="<%= Post.title %>">
                    </a>
                </div>
                <% fine_count++; %>
                <% if (fine_count % 3 === 0) { %>
                    </div><div class="row">
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<div class="container-fluid text-center mt-2 pb-5">
    <h5 class="pt-5" id="posterart">Posters</h5>
    <hr>
    <div class="container homecontent">
        <!-- make sure that there is a new row div created for every 3 posts -->
        <div class="row">
            <% let poster_count = 0; %>
            <% for (let Post of posterart) { %>
                <div class="col-md-4 mb-4">
                    <a class="lightbox" href="#<%=Post.slug%>">
                        <img class="img-fluid index_image" src="<%= Post.image %>" alt="<%= Post.title %>">
                    </a>   
                </div>
                <% poster_count++; %>
                <% if (poster_count % 3 === 0) { %>
                    </div><div class="row">
                <% } %>
            <% } %>
        </div>
    </div>
</div>
<!-- MAKE SURE THAT THE IMAGES ARE COMPRESSED! CURRENTLY USING NORMAL IMAGE-->
<% for (let Post of fineart) { %> 
    <div class="lightbox-target" id="<%=Post.slug%>">
        <img src="<%=Post.image%>"> 
        <a class="lightbox-close" href="#fineartheader"></a>
    </div>
<% } %>

<% for (let Post of posterart) { %> 
    <div class="lightbox-target" id="<%=Post.slug%>">
        <img src="<%=Post.image%>">
        <a class="lightbox-close" href="#posterartheader"></a>
    </div>
<% } %>