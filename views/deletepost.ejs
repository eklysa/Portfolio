<!-- include standard layout -->
<% layout('../layouts/boilerplate') %>

<div class="container-fluid admin">
    <div class="container indexcontent">
        <h1 class="text-center">Delete post: <%=Post.title%></h1>
        <div class="col-6 offset-3">
            <form class="mb-5" action="/admin/<%=Post.slug%>?_method=DELETE" method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id ="title" name = "post[title]" value = "<%=Post.title%>" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id ="image" name = "post[image]" value="<%=Post.image.url%>" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="class">Class</label>
                    <select class="form-select" type = 'text' id ="class" name = "post[class]" readonly>
                        <option selected value="<%=Post.class%>"><%=Post.class%></option>
                    </select>
                </div>
                <div class="mb-3">
                    <button id="deleteButton" class="btn btn-danger">Delete post</button>
                </div>
            </form>
            <a href="/admin"><button type="button" class="btn mb-5">Back to admin page</button></a>
            <a href="/admin/edit"><button type="button" class="btn mb-5">Edit an image</button></a>
            <a href="/admin/delete"><button type="button" class="btn mb-5">Delete an image</button></a>
        </div>
    </div>
</div>