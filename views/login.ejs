<!-- include standard layout -->
<% layout('../layouts/boilerplate') %>

<% if (messages && messages.length > 0) { %>
  <div class="alert alert-warning flash container-fluid" role="alert">
    <%= messages %>
  </div>
<% } %>

<div class="container-fluid text-center admin">
  <div class="container indexcontent">
    <h1 class="mb-3">Login</h1>
    <form class= "container-fluid" method="post" action="/login">
      <div class="form-group col-md-6 mx-auto">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="form-group col-md-6 mx-auto">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <div>
        <button type="submit" class="btn mt-3">Login</button>
      </div>
    </form>
  </div>
</div>