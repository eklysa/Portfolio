<% layout('../layouts/boilerplate') %>

<div class="container-fluid pr-0 pl-0" id="newBackground" style="opacity:0.4; position:absolute">
    <img class="img-fluid" src="images/background_v5.png">
</div>

<div class="container indexcontent" id="contactForm">
    <form action="/" class="contact-form pt-5 pb-5" method="post"> 
        <h5 class="title">Contact me</h5>
        <p class="description mb-5">Feel free to contact me if you have a question or want to stay in touch!</p>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" aria-label="Name" placeholder="Enter your name">
        </div>
        <div class="form-group">
            <label for="email">Email adress</label>
            <input type="email" class="form-control" name="email" id="email" aria-label="Email" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" id="message" name="message" aria-label="Message" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>