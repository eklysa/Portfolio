        <!-- stylesheet -->
        <link rel="stylesheet" type="text/css" href="/stylesheet.css">
        <link rel="icon" type="image/png" href="images/portfolio_logo_v2.png">
    </head>
    <body>
        <!-- start with a header, visible on every page -->
        <%- include('../partials/header')%>

        <!-- input from views -->
        <%- body %>

